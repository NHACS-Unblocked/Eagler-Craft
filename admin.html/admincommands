<!DOCTYPE html>
<html>
<head>
    <title>Protected Page</title>
</head>
<body>
    <div id="content" style="display: none;">
        <h1>Welcome to the Protected Content!</h1>
        <p>This is sensitive information.</p>
    </div>

    <script>
        const correctPassword = "3748591272734"; // Replace with your desired password

        function checkPassword() {
            let enteredPassword = prompt("Please enter the password:");

            if (enteredPassword === correctPassword) {
                document.getElementById("content").style.display = "block";
            } else {
                alert("Incorrect password. Access denied.");
                // Optionally, redirect or clear the page
                window.location.href = "about:blank"; // Redirect to a blank page
            }
        }

        checkPassword(); // Call the function when the page loads
    </script>
</body>
</html>
